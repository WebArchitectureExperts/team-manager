<p id="notice"><%= notice %></p>

<h1>Postal Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Street line 1</th>
      <th>Street line 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postal_addresses.each do |postal_address| %>
      <tr>
        <td><%= postal_address.street_line_1 %></td>
        <td><%= postal_address.street_line_2 %></td>
        <td><%= postal_address.city %></td>
        <td><%= postal_address.state %></td>
        <td><%= postal_address.zip %></td>
        <td><%= link_to 'Show', postal_address %></td>
        <td><%= link_to 'Edit', edit_postal_address_path(postal_address) %></td>
        <td><%= link_to 'Destroy', postal_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Postal Address', new_postal_address_path %>
