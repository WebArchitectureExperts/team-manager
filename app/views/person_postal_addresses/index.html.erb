<p id="notice"><%= notice %></p>

<h1>Person Postal Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Postal address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_postal_addresses.each do |person_postal_address| %>
      <tr>
        <td><%= person_postal_address.person %></td>
        <td><%= person_postal_address.postal_address %></td>
        <td><%= link_to 'Show', person_postal_address %></td>
        <td><%= link_to 'Edit', edit_person_postal_address_path(person_postal_address) %></td>
        <td><%= link_to 'Destroy', person_postal_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person Postal Address', new_person_postal_address_path %>
