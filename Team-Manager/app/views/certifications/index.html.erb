<p id="notice"><%= notice %></p>

<h1>Certifications</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Certification name</th>
      <th>Expiration date</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certifications.each do |certification| %>
      <tr>
        <td><%= certification.person_id %></td>
        <td><%= certification.certification_name %></td>
        <td><%= certification.expiration_date %></td>
        <td><%= certification.note %></td>
        <td><%= link_to 'Show', certification %></td>
        <td><%= link_to 'Edit', edit_certification_path(certification) %></td>
        <td><%= link_to 'Destroy', certification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Certification', new_certification_path %>
